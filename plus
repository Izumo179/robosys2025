import sys

def main() -> None:

    lines = [line.rstrip("\n") for line in sys.stdin]

    if not lines:
        return

    inner_width = max(len(l) for l in lines)

    border_len = inner_width + 8
    border = "*" * border_len

    print(border)
    for l in lines:
        print(f"*** {l:<{inner_width}} ***")
    print(border)


if __name__ == "__main__":
    main()
