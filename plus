import sys

def main():
    lines = [l.rstrip('\n') for l in sys.stdin]


    width = max(len(l) for l in lines) if lines else 0


    border = "*" * (width + 6)

    print(border)
    for l in lines:
        print(f"*** {l} ***")
    print(border)

if __name__ == "__main__":
    main()
